@import 'tokyonight.css';

* {
    /* `otf-font-awesome` is required to be installed for icons */
    color: #c0caf5;
    font-family: JetBrainsMono, FontAwesome;
    font-size: 12px;
    font-weight: bold;
    min-height: 5px;
    border-radius: 12px;
}

.modules-right {
    background-color: rgba(0, 0, 30, 0.5);
    border: 0px solid #6600ff;
    border-radius: 12px;
    margin: 4px;
}

.modules-center {
    background-color: rgba(0, 0, 30, 0.5);
    border: 0px solid #6600ff;
    border-radius: 12px;
    margin: 4px;
}

.modules-left {
    background-color: rgba(0, 0, 30, 0.5);
    border: 0px solid #6600ff;
    border-radius: 12px;
    margin: 4px;
}

window#waybar {
    background-color: rgba(0, 0, 0, 0);
    border-radius: 0px;
}

window#waybar.hidden {
    opacity: 0.2;
}

button {
    /* Use box-shadow instead of border so the text isn't offset */
    box-shadow: inset 0 -3px transparent;
    /* Avoid rounded borders under each button name */
    border: none;
    border-radius: 0;
    color: #000000;
}

/* https://github.com/Alexays/Waybar/wiki/FAQ#the-workspace-buttons-have-a-strange-hover-effect */
button:hover {
    background: inherit;
    /* box-shadow: inset 0 -3px #ffffff; */
}

#workspaces button {
    padding: 0 5px;
    background-color: transparent;
    color: #ffffff;
}

#workspaces button:hover {
    background: rgba(0, 0, 0, 0.5);
    border-radius: 12px;
}

#workspaces button.active {
    /* box-shadow: inset 0 -2px #ffffff; */
    background-color: #83b5ff;
    border-radius: 12px;
    margin: 2px;
}

#workspaces button.urgent {
    color: #eb4d4b;
}

#mode {
    /* background-color: #64727D; */
    border-bottom: 3px solid #ffffff;
}

#clock,
#battery,
#cpu,
#memory,
#disk,
#temperature,
#backlight,
#network,
#pulseaudio,
#wireplumber,
#tray,
#idle_inhibitor,
#custom-launcher,
#custom-notifications,
#mpd {
    padding: 0 10px;
    color: #ffffff;
}

#window.empty {
    background: rgba(0, 0, 0, 0);
}

#window {
    margin-left: 8px;
    margin-right: 8px;
}

#workspaces {
    margin: 0 4px;
}

/* If workspaces is the leftmost module, omit left margin */
.modules-left > widget:first-child > #workspaces {
    margin-left: 0;
}

/* If workspaces is the rightmost module, omit right margin */
.modules-right > widget:last-child > #workspaces {
    margin-right: 0;
}

@keyframes blink {
    to {
        color: #ffffff;
        color: #ffffff;
    }
}

#battery.critical:not(.charging) {
    color: #f53c3c;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

label:focus {
    background-color: #000000;
}

#cpu {
    color: #cdd6f4;
}

#memory {
    color: #cdd6f4;
}

#disk {
    color: #cdd6f4;
}

#pulseaudio {
    color: #cdd6f4;
    /* color: #9a0eeb; */
	/* border-bottom: 2px solid #9a0eeb; */
}

#backlight {
    color: #cdd6f4;
}

#network {
    color: #cdd6f4;
}

#battery {
    color: #cdd6f4;
}

#clock {
    color: #cdd6f4;
}

#custom-launcher {
    color: #7eb7e1;
    font-size: 16px;
}

#custom-notifications {
    color: #cdd6f4;
}

#wireplumber {
    background-color: #fff0f5;
    color: #000000;
}

#wireplumber.muted {
    background-color: #f53c3c;
}

#tray {
    /* background-color: #2980b9; */
    margin: 2px;
    border: 0px solid #8803fc;
	border-radius: 8px;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
    color: #eb4d4b;
}

#idle_inhibitor {
    color: #ca0eeb;
}

#idle_inhibitor.activated {
    color: #2d3436;
}
